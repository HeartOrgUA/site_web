<div id="main-content">
  <div class="devise signin">

    <div class="container">
      <div class="row">
        <div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
          <div class="form-wrapper">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

              <h2 class="text-uppercase margin-b-20"><%= t('password_reset') %></h2>

              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.email_field :email, placeholder: t('email'), class: 'form-control', autofocus: true %>
              </div>

              <div class="actions">
                <%= f.submit t('reset'), class: 'btnn btnn-red text-uppercase padding-10-tops' %>
              </div>

              <div class="links">
                <%= link_to t('sign_up'), new_registration_path(resource_name), class: 'pull-left' %>
                <%= link_to t('log_in'), new_session_path(resource_name), class: 'pull-right' %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>
