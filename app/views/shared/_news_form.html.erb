<section class="subscription">
  <div class="subscription-content">
    <div class="container-fluid">
      <div class="col-sm-12">
        <%= content_tag :div, t('interesting_news'), class: 'text-center text-container' %>
        <div class="row">
          <div class="col-lg-offset-3 col-lg-6 col-sm-offset-1 col-sm-10">
            <%= form_tag subscribe_path do %>
              <div class="input-group">
                <%= email_field :email, nil, placeholder: t('your_email'), class: 'form-control' %>
                <span class="input-group-btn">
                  <%= button_tag t('subscribe'), type: :submit, class: 'btnn btnn-lightred text-uppercase' %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
