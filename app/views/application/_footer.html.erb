<footer>
  <div class="footer-content">
    <div class="container-fluid">
      <div class="row">

        <div class="col-lg-3 col-md-5 col-sm-6 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
          <%= image_tag 'logo_new.svg', class: 'logo' %>
        </div>

        <div class="col-lg-2 visible-lg-block">
          <ul class="list-unstyled">
            <li><%= link_to t('about_us'), about_path %></li>
            <li><%= link_to t('projects'), projects_path %></li>
            <li><%= link_to t('news'), news_index_path %></li>
            <li><%= link_to t('trenings'), trainings_path %></li>
            <% if user_signed_in? %>
              <li><%= link_to t('log_out'), destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t('log_in'), new_user_session_path %></li>
              <li><%= link_to t('sign_up'), new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>

        <div class="col-lg-2 visible-lg-block">
          <ul class="list-unstyled">
            <li><%= link_to t('volonteer'), volonteer_path %></li>
            <li><%= link_to t('donation'), donate_path %></li>
            <li><%= link_to t('contacts'), contacts_path %></li>
          </ul>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-8 col-lg-offset-0 col-md-offset-0 col-sm-offset-1">
          <div class="h5"><%= "#{t('follow_us')}:" %></div>
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag('social_fb.svg'), 'https://www.facebook.com/heart.org.ua', target: '_blank' %>
            </div>
            <div class="col-xs-2">
              <%= link_to image_tag('social_tw.svg'), 'https://twitter.com/Heart_Ukrainian', target: '_blank' %>
            </div>
            <div class="col-xs-2">
              <%= link_to image_tag('social_vk.svg'), 'https://vk.com/heart_association', target: '_blank' %>
            </div>
            <div class="col-xs-2">
            </div>
          </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-4 col-md-offset-1 hidden-lg col-sm-8 col-sm-offset-1">
          <ul class="list-unstyled">
            <li><%= link_to t('about_us'), '#' %></li>
            <li><%= link_to t('projects'), '#' %></li>
            <li><%= link_to t('news'), '#' %></li>
            <li><%= link_to t('trenings'), '#' %></li>
          </ul>
        </div>

        <div class="col-md-5 hidden-lg col-sm-8 col-sm-offset-1">
          <ul class="list-unstyled">
            <li><%= link_to t('volonteer'), '#' %></li>
            <li><%= link_to t('cooperation'), '#' %></li>
            <li><%= link_to t('donation'), '#' %></li>
            <li><%= link_to t('contacts'), '#' %></li>
          </ul>
        </div>

      </div>
    </div>
  </div>
</footer>
